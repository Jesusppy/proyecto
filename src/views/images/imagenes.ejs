        <!-- Courses Admin Start -->
        <div class="section overflow-hidden position-relative" id="wrapper">

            <!-- Sidebar Wrapper Start -->
            <div class="sidebar-wrapper">
                <div class="menu-list">
                    <a href="/admin/homeworks"><img src="/public/images/menu-icon/icon-1.png" alt="Icon"></a>
                    <a class="active" href="/images"><img src="/public/images/menu-icon/icon-2.png" alt="Icon"></a>
                    <a href="/simulator"><img src="/public/images/menu-icon/icon-3.png" alt="Icon"></a>
                </div>
            </div>
            <!-- Sidebar Wrapper End -->

            <!-- Page Content Wrapper Start -->
            <div class="page-content-wrapper">
                <div class="row gx-10">
                    <div class="col-lg-8">

                        <!-- Blog Wrapper Start -->
                        <div class="blog-wrapper">
                            <div class="row">
                                <% for (let image of images) {%>
                                <div class="col-md-6">

                                    <!-- Single Blog Start -->
                                    <div class="single-blog">
                                        <div class="blog-image">
                                            <a href="/images/<%= image.uniqueId %> ">
                                                <img src="/public/upload/<%= image.filename %> " alt=""
                                                    class="w-100 h-100 img-thumbnail">
                                            </a>
                                        </div>
                                        <div class="blog-content">
                                            <div class="blog-author">
                                                <div class="author">

                                                    <h4 class="title"><a href="/images/<%= image.uniqueId %> "><%= image.title  %></a></h4>
                                                </div>
                                                <div class="tag">
                                                    <a href="/images/<%= image.uniqueId %> "> Comentar </a>
                                                </div>
                                            </div>

  
                                            <div class="blog-meta">
                                                <span> <i class="icofont-calendar"></i> <%= image.timestamp %> </span>
                                                <span> <i class="icofont-heart"></i><%= image.views %> </span>
                                            </div>

                                            <a href="/images/<%= image.uniqueId %> " class="btn btn-secondary btn-hover-primary">Leer mas</a>
                                        </div>
                                    </div>
                                    <!-- Single Blog End -->

                                </div>
                                <% } %>



                            </div>
                        </div>
                        <!-- Blog Wrapper End -->

