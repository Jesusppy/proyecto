<%- include("../includes/header") %>

    <div class="col-md-8">
        <div class="card-header bg-dark">
            <h3 class="card-title text-white">
                <i class="fas fa-image"></i> Crea una publicación
            </h3>
        </div>
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Comparte tus idea </h3>
            <button class="btn btn-info" id="btn-toggle-comment">
                <i class="fa fa-comment-o"></i> Añadir publicacion
            </button>
        </div>
        <div class="card-body">
                <form action="/images/imagenes" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="title for the image" required>
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="2"  class="form-group" id="MyID"></textarea> 
                    </div> 

                    <div class="form-group">
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" name="image" class="custom-file-input" id="inputGroupFile04"
                                    aria-describedby="inputGroupFileAddon04">
                                <label class="custom-file-label" for="inputGroupFile04">Choose file</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success">
                            <i class="fa fa-upload"></i>Sube tu publicación
                        </button>
                    </div>
                    
                </form>
    </div>



        <div class="card mt-2">
            <div class="card-header bg-dark text-white">
                <h3><i class="far fa-images"></i> Publicaciones recientes</h3>
            </div>

            <div class="card-body">
                <div class="row">

                    <% for (let image of images) {%>
                        <div class="col-md-6">
                            <a href="/images/<%= image.uniqueId %> ">
                                <img src="/public/upload/<%= image.filename %> " alt=""
                                    class="w-100 h-100 img-thumbnail">
                            </a>
                        </div>

                        <% } %>
                </div>

            </div>
        </div>
    </div>
    <div class="col-md-4">
        <%- include("../images/stats") %>
            <%- include("../images/popular") %>
                <%- include("../images/comments") %>
    </div>
    <script>
        $(document).ready(function () {
            var simplemde = new SimpleMDE({ element: $("#MyID")[0] });
        });
    </script>
    <%- include("../includes/footer") %>