                                    <div class="single-form">
                                        <input type="text" id="title" name="name" placeholder="A침ade un titulo" class="form-control" required>
                                    </div>

                                    <div class="form-group">
                                    <textarea name="description" class="form-control" rows="2" id="MyID" placeholder="A침ade un Descripci칩n" required></textarea>

                                    </textarea>
                                    </div>

                                    <div class="message-btn">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="custom-file">
                                                    <input type="file" name="image" class="custom-file-input" id="inputGroupFile04"
                                                        aria-describedby="inputGroupFileAddon04">
                                                    <label class="custom-file-label" for="inputGroupFile04">Choose file</label>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <button class="btn btn-secondary btn-hover-primary">Cancel</button>
                                        <button class="btn btn-primary btn-hover-dark">Submit</button>
                                    </div>
                                </div>
                            </div>
                            
                        </form>
                    </div>
                    <div class="col-lg-4">

                        <!-- Blog Sidebar Start -->
                        <div class="sidebar">

                            <!-- Sidebar Widget Search Start -->
                            <div class="sidebar-widget widget-search">
                              
                            </div>
                            <!-- Sidebar Widget Search End -->

                            <!-- Sidebar Widget Category Start -->
                            <div class="sidebar-widget">
                                <h4 class="widget-title">Estadisticas</h4>

                                <div class="widget-category">
                                    <ul class="category-list">
                                        <li><a href="/images">Imagenes  <span>(<%= sidebar.stats.images %>)</span></a></li>
                                        <li><a href="/images">Comentarios <span>(<%= sidebar.stats.comments %>)</span></a></li>
                                        <li><a href="/images">Views <span>(<%= sidebar.stats.views  %>)</span></a></li>
                                        <li><a href="/images">Likes <span>(<%= sidebar.stats.likes %>)</span></a></li>

                                    </ul>
                                </div>
                            </div>
                            <!-- Sidebar Widget Category End -->

                            <!-- Sidebar Widget Post Start -->
                            <div class="sidebar-widget">
                                <h4 class="widget-title">Comentarios recientes </h4>

                                <div class="widget-post">
                                    <ul class="post-items">
                                        <% for (let c of sidebar.comments) {%>
                                        <li>
                                            <!-- Sidebar Widget Post Start -->
                                            <div class="single-post">
                                                <div class="post-thumb">
                                                    <% if(c.image !=undefined) { %> <a href="/images/<%= c.image.uniqueId %> ">
                                                        <% } %>
                                                            <% if(c.image !=undefined) { %> <img src="/public/upload/<%= c.image.filename %>"
                                                                    class="img-thumbnail w-70">
                                                                <% } %>
                                                </div>
                                                <div class="post-content">
                                                    <h5 class="title"><a href="/images/<%= c.image.uniqueId %>"><%= c.comment  %> </a></h5>
                                                    <span class="date"><i class="icofont-calendar"></i> <%= c.timestamp %></span>
                                                </div>
                                            </div>
                                            <!-- Sidebar Widget Post End -->
                                        </li>
                                        <% } %>
                                    </ul>
                                </div>
                            </div>
                            <!-- Sidebar Widget Post End -->

                            <!-- Sidebar Widget Tags Start -->
                            <div class="sidebar-widget">
                                <h4 class="widget-title">Lo mas popular </h4>

