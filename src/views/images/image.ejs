<body>

    <div class="main-wrapper main-wrapper-02">

        <!-- Login Header Start -->
        <div class="section login-header">
            <!-- Login Header Wrapper Start -->
            <div class="login-header-wrapper navbar navbar-expand">

                <!-- Header Logo Start -->
                <div class="login-header-logo">
                    <a href="/home"><img src="/public/images/logo-icon.png" alt="Logo"></a></li>
                </div>
                <!-- Header Logo End -->

                <!-- Header Search Start -->
                <div class="login-header-search dropdown">

        
                </div>
                <!-- Header Search End -->

                <!-- Header Action Start -->
                <div class="login-header-action ml-auto">
                    

                    <a class="action author" href="/users/<%= user._id %>">
                        <img src="/public/images/author/author-07.jpg" alt="Author">
                    </a>

                    <div class="dropdown">
                        <button class="action more" data-bs-toggle="dropdown">
                            <span></span>
                            <span></span>
                            <span></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="" href="/users/edit/<%= user._id %>"><i class="icofont-user"></i> Editar perfil </a></li>
                            <li><a class="" href="/auth/logout"><i class="icofont-logout"></i> Cerrar Sesi√≥n</a></li>
                        </ul>
                    </div>
                </div>
                <!-- Header Action End -->

            </div>
            <!-- Login Header Wrapper End -->
        </div>
        <!-- Login Header End -->

        <!-- Courses Admin Start -->
        <div class="section overflow-hidden position-relative" id="wrapper">

            <!-- Sidebar Wrapper Start -->
            <div class="sidebar-wrapper">
                <div class="menu-list">
                    <a href="/admin/homeworks"><img src="/public/images/menu-icon/icon-1.png" alt="Icon"></a>
                    <a class="active" href="/images"><img src="/public/images/menu-icon/icon-2.png" alt="Icon"></a>
                    <a href="/simulator"><img src="/public/images/menu-icon/icon-3.png" alt="Icon"></a>
                </div>
            </div>
            <!-- Sidebar Wrapper End -->

            <!-- Page Content Wrapper Start -->
            <div class="page-content-wrapper">
                <div class="card-body">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2>
                            <%= image.title %>
                        </h2>
                        <button class="btn btn-danger" id="btn-delete" data-id="<%= image.uniqueId %>">
                            <i class="fa fa-times"></i>Delete
                        </button>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <%- image.content %>
                        </p>
                        <div class="text-center">
                            <img src="/public/upload/<%= image.filename%>" width="25%" alt="Image">
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <button class="btn btn-success" id="btn-like" data-id="<%= image.filename %>">
                            <i class="fa fa-thumbs-up"></i>Like
                        </button>
                        <p>
                            <span class="likes-count">
                                <%= image.likes %>
                            </span>
                            <i class="fas fa-heart"></i>
                        </p>

                        <p>
                            <i class="icofont-eye-alt">
                                <%= image.views %>
                            </i>
                        </p>
                        <p>
                            <i class="icofont-wall-clock">
                                <%= timeago(image.timestamp) %>
                            </i>
                        </p>
                    </div>
                </div>
                <div class="card mt-2">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3>Comments</h3>
                        <button class="btn btn-info" id="btn-toggle-comment">
                            <i class="fa fa-comment-o"></i> Realizar un comentario
                        </button>
                    </div>

                 
                    <div class="card-body">
                        
                        <blockquote id="post-comment">
                
                            <form action="/images/<%= image.uniqueId %>/comment" method="POST">
                                <p class="card-text"> 
                                    <div class="single-form">
                                        <input type="text" id="comment-name" name="name" placeholder="<%= user.name %>" class="form-control">
                                    </div>
                                <div class="form-group">
                                    <textarea name="comment" id="MyID" class="form-control" rows="3" placeholder="Escriba un comentario..."></textarea>
                                </div>
            
                                <div class="form-group">
                                  
                                    <button class="btn btn-success col-md-4" id="btn-comment">
                                        <i class="fa fa-comment"></i> Comentar
                                    </button>
                                </div>
                            </form>
                        </blockquote>
                        <ul class="list-group p-4">
                            <% for (let comment of comments) {%>
                                <li class="list-group-item">
                                    <div class="row">
                                        <a href="#" class="col text-center">
                                            <img src="http://gravatar.com/avatar/<%= comment.gravatar %>?d=monsterid&s45" alt="">
                                        </a>
                                        <blockquote class="col">
                                            <p class="card-text">
                                                <%- comment.content %>
                                            </p>
            
                                            <footer class="blockquote-footer">
                                                <h6>
                                                    <%= comment.name %>
                                                </h6>
                                                <cite title="Source Title">
                                                    <%= timeago(comment.timestamp) %>
                                                </cite>
                                            </footer>
                                        </blockquote>
                                    </div>
                                </li>
                                <% } %>
                        </ul>
                    </div>

            </div>
            </div>
            <!-- Page Content Wrapper End -->

        </div>


        <!-- Footer Start  -->
        <div class="section footer-section">

            <!-- Footer Widget Section Start -->
           
            <!-- Footer Widget Section End -->

            <!-- Footer Copyright Start -->
            <div class="footer-copyright">
                <div class="container">

