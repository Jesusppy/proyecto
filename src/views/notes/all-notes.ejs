<%- include("../includes/header") %>

    <div class="container">



        <div class="row">
            <% if (notes.length> 0) { %>
                <% for (let note of notes) {%>
                    <div class="col-md-3">
                        <div class="card-body">
                            <h4 class="card-title d-flex justify-content-between align-items-center">
                                <%= note.title %> <a href="/notes/edit/<%= note._id %>"><i class="far fa-edit"></i></a>
                            </h4>
                           
                            <div>
                                <%- note.content %>
                            </div>
                            <form action="/notes/delete/<%= note._id %>?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="btn btn-danger btn-block btn-sm" type="submit">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                    <% } %>
                        <%} else {%>
                            <div class="card mx-auto">
                                <div class="card-body">
                                    <h1>Hello <%= user.name %>
                                    </h1>
                                    <p class="lead">No hay notas aun</p>
                                    <a href="/notes/add" class="btn btn-success btn-block">Create one!</a>
                                </div>
                            </div>
                        <% } %>
        </div>

    </div>




<%- include("../includes/footer") %>