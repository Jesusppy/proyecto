                    <a href="/images"><img src="/public/images/menu-icon/icon-2.png" alt="Icon"></a>
                    <a href="/simulator"><img src="/public/images/menu-icon/icon-3.png" alt="Icon"></a>
                </div>
            </div>
            <!-- Sidebar Wrapper End -->

            <div class="page-content-wrapper py-0">

                <!-- Admin Tab Menu Start -->

                <!-- Admin Tab Menu End -->

                <!-- Page Content Wrapper Start -->
                <div class="main-content-wrapper pb-0">
                    <div class="container-fluid">

                        <!-- Admin Top Bar Start -->

                        <!-- Admin Top Bar End -->

                        <!-- Question & Answer End -->
                        <div class="question-answer">

                            <div class="row">

                                <div class="col-xl-8">

                                    <!-- Answer Message Wrapper Start -->
                                    <div class="answer-message-wrapper">

                                        <ul>
                                            <li>
                                                <!-- Single Message Start -->
                                                <div class="single-message">
                                                    <div class="message-author">
                                                        <div class="author-images">
                                                            <img src="/public/images/author/author-12.jpg" alt="Author">
                                                        </div>
                                                        <div class="author-content">
                                                            <h6 class="name"><strong> </strong> <span class="time">Fecha
                                                                    de inicio <%= timeago(homework.timestamp) %></span>
                                                            </h6>
                                                            <h4 class="title">
                                                                <%= homework.title %>
                                                            </h4>
                                                        </div>


                                                        <!--  <a class="answer" href="#"><i class="icofont-ui-messaging"></i> Realizar</a>-->

                                                    </div>
                                                    <p>
                                                        <%- homework.description %>
                                                    </p>

                                                    <embed src="/public/upload/<%= homework.file.path  %> " width="100%"
                                                        height="375" type="application/pdf">
                                                </div>

                                                <!-- Single Message End -->


                                                <ul class="message-replay">
                                                    <li>
                                                        <% if (answers) { %>
                                                            <!-- Single Message Start -->
                                                            <div class="single-message">
                                                                <div class="message-author">
                                                                    <div class="author-images">
                                                                        <img src="/public/images/author/author-16.jpg"
                                                                            alt="Author">
                                                                    </div>
                                                                    <div class="author-content">
                                                                        <h6 class="name"><strong>
                                                                                <%= answers.student.name %>
                                                                            </strong>
                                                                        </h6>
                                                                        <span class="time">
                                                                            <%= answers.timestamp %>
                                                                        </span>
                                                                    </div>
                                                                    <div class="meta">
                                                                        <a class="answer"
                                                                            href="/homeworks/editAnswer/<%= answers._id%>"><i
                                                                                class="icofont-ui-messaging"></i>
                                                                            Editar</a>
                                                                    </div>
                                                                </div>
                                                                <p>
                                                                    <%- answers.content %>
                                                                </p>
                                                                <div class="rating">
                                                                    <div class="rating-author">
                                                                        <div class="rating-content">
                                                                            <div class="average-rating">
                                                                                <span class="label">Calificaci√≥n de la
                                                                                    Asignaci√≥n:</span>
                                                                                <span class="rating-star">
                                                                                    <span class="count">
                                                                                        <%= answers.score %>


                                                                                            <span class="rating-bar"
                                                                                                style="width: <%= answers.score %>%"></span>
                                                                                    </span>
                                                                                </span>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <!-- Single Message End -->
                                                    </li>
                                                </ul>
                                                <% } else { %>
                                                    <div class="row">
                                                        <div class="col-sm-10 col-sm-offset-1">
                                                            <div class="card">
                                                                <div class="card-body">
                                                                    <h5 class="card-title">¬°No hay respuestas a√∫n! </h5>
                                                                    <p class="card-text">A√±ade una respuesta antes de
                                                                        que finalice el tiempo de
                                                                        entrega</p>


                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <form action="/homeworks/<%= homework._id %>" method="POST"
                                                        enctype="multipart/form-data">
                                                        <div class="message-form">
                                                            <div class="auhtor">
                                                                <img src="/public/images/author/author-16.jpg"
                                                                    alt="Author">
                                                            </div>

                                                            <div class="message-input ">
                                                                <div class="single-form">
                                                                    <input type="text" class="form-control" name="title"
                                                                        placeholder="Inserta un titulo para la asignaci√≥n">
                                                                </div>
                                                                <textarea name="description" rows="2"
                                                                    id="MyID"></textarea>
                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <div class="custom-file">
                                                                            <input type="file" name="image"
                                                                                class="custom-file-input"
                                                                                id="inputGroupFile04"
                                                                                aria-describedby="inputGroupFileAddon04"
                                                                                required>
                                                                            <label class="custom-file-label"
                                                                                for="inputGroupFile04">Seleccionar
                                                                                archivo</label>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="message-btn">
                                                                    <button
                                                                        class="btn btn-secondary btn-hover-primary">Cancel</button>
                                                                    <button
                                                                        class="btn btn-primary btn-hover-dark">Submit</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                    <% } %>


                                            </li>
                                            <li>
                                                <!-- Single Message Start -->

                                                <!-- Single Message End -->
                                            </li>
                                        </ul>


                                    </div>
                                    <!-- Answer Message Wrapper End -->

                                </div>
                            </div>

                        </div>
                        <!-- Question & Answer End -->

