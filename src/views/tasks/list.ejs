<%- include("../includes/header") %> 
    
  
    <div class="container">
        <div class="row">
            <!--FORM-->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/tasks/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="Insertar un titulo" class="form-control">
                            </div> 
                            <div class="form-group">
                                <textarea name="description" cols="80" class="form-control" placeholder="Insertar una descripción"></textarea>
                            </div> <div class="d-grid gap-2">
                                <button class="btn btn-primary" type="Submit">Agregar</button>
                              </div>                       
                        </form>
                    </div>
                </div>
            </div>
                <!-- LIST -->
                <div class="col-md-7">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>N°</th>
                                <th>Titulo</th>
                                <th>Descripcion</th>
                                <th>Operacion</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i < tasks.length; i++) { %>
                                <tr>
                                    <td><%= i + 1 %> </td>
                                    <td><%= tasks[i].title %> </td>
                                    <td><%= tasks[i].description %> </td>
                                    <td>
                                        <a href="/tasks/turn/<%= tasks[i]._id %>" 
                                            class="<%= tasks[i].status ? 'btn btn-success' : 'btn btn-dark'%>">Hecha
                                        </a>
                                        <a href="/tasks/delete/<%= tasks[i]._id %>" 
                                            class="btn btn-danger">
                                            Eliminar
                                        </a>
                                        <a href="/tasks/edit/<%= tasks[i]._id %>" 
                                        class="btn btn-info">
                                        Editar
                                    </a>
                                    </td>
                                </tr>
                         <%  } %>
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>

        <%- include("../includes/footer") %> 
 